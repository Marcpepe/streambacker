doctype html
html(lang="en", ng-app="%module%")
  head
    title First page stbk
    meta(charset="utf-8")
    link(rel="icon", type="image/x-icon", href="/favicon.ico")
    link(rel="stylesheet", href="/%styles%/vendor.css")
    link(rel="stylesheet", href="/%styles%/app.css")
  body(
    layout="column"
  )
    md-toolbar.md-warn
      .md-toolbar-tools
        span
          a(href="/#/") Streambacker
        span(flex)
        md-button Right bar button

    .stbk-main(
      ng-view
      layout-padding
    )

    span.stbk-color(layout-padding) FOOTER

    script(src="/%scripts%/vendor.js")
    script(src="/%scripts%/app.js")
    script(src="/%scripts%/templates.js")
